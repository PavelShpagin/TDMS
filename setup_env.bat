@echo off
cd /d "%~dp0"

echo ========================================
echo    TDMS Environment Setup Script
echo ========================================
echo.
echo This script will:
echo - Install uv package manager (if needed)
echo - Install all required dependencies via uv
echo - Set up configuration files
echo - Prepare for both web and desktop usage
echo.

REM Check if Python is available
python --version >nul 2>&1
if errorlevel 1 (
    echo ERROR: Python is not installed or not in PATH
    echo Please install Python 3.10+ from https://python.org
    echo Make sure to check "Add Python to PATH" during installation
    pause
    exit /b 1
)

echo âœ“ Python found
python --version

echo.
echo ========================================
echo Step 1: Checking uv Installation
echo ========================================

REM Check if uv is installed
uv --version >nul 2>&1
if errorlevel 1 (
    echo uv not found. Please install uv first:
    echo.
    echo   Windows: powershell -ExecutionPolicy ByPass -c "irm https://astral.sh/uv/install.ps1 | iex"
    echo   Or visit: https://docs.astral.sh/uv/getting-started/installation/
    echo.
    pause
    exit /b 1
)

echo âœ“ uv package manager found
uv --version

echo.
echo ========================================
echo Step 2: Installing Dependencies with uv
echo ========================================

REM Remove old venv if it exists
if exist "venv" (
    echo Removing old venv directory...
    rmdir /s /q venv
)

REM Remove old .venv if it exists
if exist ".venv" (
    echo Removing old .venv directory...
    rmdir /s /q .venv
)

echo Installing dependencies from requirements.txt...
uv add --requirements requirements.txt
if errorlevel 1 (
    echo ERROR: Failed to install dependencies with uv
    pause
    exit /b 1
)

echo âœ“ Dependencies installed

echo.
echo ========================================
echo Step 3: Locking Dependencies
echo ========================================

echo Creating lockfile...
uv lock
if errorlevel 1 (
    echo WARNING: Failed to lock dependencies
)

echo âœ“ Dependencies locked

echo.
echo ========================================
echo Step 4: Syncing Environment
echo ========================================

echo Syncing virtual environment...
uv sync
if errorlevel 1 (
    echo ERROR: Failed to sync environment
    pause
    exit /b 1
)

echo âœ“ Environment synced

echo.
echo ========================================
echo Step 5: Installing Development Dependencies
echo ========================================

echo Installing pytest and coverage tools...
uv add --dev pytest pytest-cov pytest-html
if errorlevel 1 (
    echo WARNING: Failed to install testing dependencies
)

echo âœ“ Development dependencies installed

echo.
echo ========================================
echo Step 6: Creating Configuration Files
echo ========================================

REM Create .env file if it doesn't exist
if not exist ".env" (
    echo Creating .env configuration file...
    (
        echo # TDMS Configuration File
        echo # Generated by setup_env.bat
        echo.
        echo # Google OAuth Credentials for Web Application
        echo GOOGLE_OAUTH_CLIENT_ID=your_web_client_id_here
        echo GOOGLE_OAUTH_CLIENT_SECRET=your_web_client_secret_here
        echo.
        echo # Google OAuth Credentials for Desktop Application
        echo DESKTOP_GOOGLE_OAUTH_CLIENT_ID=your_desktop_client_id_here
        echo DESKTOP_GOOGLE_OAUTH_CLIENT_SECRET=your_desktop_client_secret_here
        echo.
        echo # Google Picker API Configuration
        echo GOOGLE_PICKER_APP_ID=your_picker_app_id_here
        echo.
        echo # Optional: Google API Key ^(for enhanced features^)
        echo GOOGLE_API_KEY=
        echo.
        echo # Database Configuration
        echo DATABASE_DIR=databases
        echo.
        echo # Server Configuration
        echo WEB_PORT=8000
        echo DESKTOP_PORT_START=8001
    ) > .env
    echo âœ“ Created .env configuration file
) else (
    echo âœ“ .env file already exists
)

REM Create databases directory
if not exist "databases" (
    mkdir databases
    echo âœ“ Created databases directory
) else (
    echo âœ“ databases directory already exists
)

REM Create desktop_databases directory
if not exist "desktop_databases" (
    mkdir desktop_databases
    echo âœ“ Created desktop_databases directory
) else (
    echo âœ“ desktop_databases directory already exists
)

echo.
echo ========================================
echo Step 7: Verifying Installation
echo ========================================

echo Testing FastAPI import...
uv run python -c "import fastapi; print('âœ“ FastAPI:', fastapi.__version__)" 2>nul
if errorlevel 1 (
    echo âœ— FastAPI import failed
    set SETUP_ERROR=1
) else (
    echo âœ“ FastAPI working
)

echo Testing PyWebView import...
uv run python -c "import webview; print('âœ“ PyWebView: OK')" 2>nul
if errorlevel 1 (
    echo âœ— PyWebView import failed
    set SETUP_ERROR=1
) else (
    echo âœ“ PyWebView working
)

echo Testing python-dotenv import...
uv run python -c "import dotenv; print('âœ“ python-dotenv: OK')" 2>nul
if errorlevel 1 (
    echo âœ— python-dotenv import failed
    set SETUP_ERROR=1
) else (
    echo âœ“ python-dotenv working
)

echo Testing TDMS core modules...
uv run python -c "from src.core.database import Database; print('âœ“ TDMS core modules: OK')" 2>nul
if errorlevel 1 (
    echo âœ— TDMS core import failed
    set SETUP_ERROR=1
) else (
    echo âœ“ TDMS core working
)

echo.
echo ========================================
echo Step 8: Setup Complete
echo ========================================

if defined SETUP_ERROR (
    echo âš ï¸  Setup completed with some errors
    echo Some features may not work properly
    echo.
) else (
    echo âœ… Setup completed successfully!
    echo.
)

echo ğŸ“ Project Structure:
echo   â”œâ”€â”€ .venv\                # uv virtual environment
echo   â”œâ”€â”€ src\                  # Source code
echo   â”œâ”€â”€ databases\            # Web app databases
echo   â”œâ”€â”€ desktop_databases\    # Desktop app databases  
echo   â”œâ”€â”€ tests\                # Unit tests
echo   â”œâ”€â”€ .env                  # Configuration file
echo   â”œâ”€â”€ pyproject.toml        # Project dependencies
echo   â”œâ”€â”€ uv.lock              # Locked dependencies
echo   â”œâ”€â”€ desktop.bat           # Desktop launcher
echo   â”œâ”€â”€ run_server.py         # Web server launcher
echo   â””â”€â”€ unit_test.bat         # Test runner
echo.

echo ğŸš€ Ready to Use:
echo.
echo   Desktop Application:
echo     desktop.bat
echo.
echo   Web Application:
echo     uv run python run_server.py
echo     ^(Access at http://localhost:8000^)
echo.
echo   Run Tests:
echo     unit_test.bat
echo.

echo ğŸ“ Next Steps:
echo   1. Edit .env file with your Google OAuth credentials
echo   2. See SETUP_GUIDE.md for credential setup instructions
echo   3. Run desktop.bat to start desktop app
echo   4. Or run "uv run python run_server.py" for web app
echo.

echo ========================================
echo Environment setup complete!
echo ========================================

pause
